# ThumbGen AI Environment Variables
# Copy this file to .env.local and fill in your values

# ===========================================
# REQUIRED - Gemini AI API
# ===========================================
# Get your API key from: https://ai.google.dev/
VITE_GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_API_KEY=your_gemini_api_key_here

# ===========================================
# OPTIONAL - Supabase (for authentication & database)
# ===========================================
# Get these from your Supabase project settings
VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key_here
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# ===========================================
# OPTIONAL - Stripe (for payments)
# ===========================================
# Get these from your Stripe dashboard
VITE_STRIPE_PUBLISHABLE_KEY=pk_test_your_publishable_key_here
STRIPE_SECRET_KEY=sk_test_your_secret_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# Stripe Product IDs (create these in Stripe dashboard)
STRIPE_CREATOR_PRODUCT_ID=prod_your_creator_product_id
STRIPE_AGENCY_PRODUCT_ID=prod_your_agency_product_id

# ===========================================
# OPTIONAL - Server Configuration
# ===========================================
PORT=3001
CORS_ORIGIN=http://localhost:3000

# ===========================================
# OPTIONAL - Vercel (auto-populated in production)
# ===========================================
# VERCEL_URL is automatically set by Vercel
